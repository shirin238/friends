

<div class="col-md-6">
  <div class="h-100 p-5 bg-body-tertiary border rounded-3">

    <h1 class="display-4">
      <%= @friend.first_name %> 
      <%=  @friend.last_name %>    
    </h1>

    <br/>

    <p class="lead">
      <strong>Email:</strong>
      <%=  @friend.email %> |
      <%=  @friend.phone %> |
      <%=  @friend.twitter %>
    </p>

    <hr class="my-4">

    <%= link_to "Edit", edit_friend_path(@friend), class: "btn btn-outline-dark" %> 
    <%= link_to 'Delete', @friend, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'}, 
                                            class: "btn btn-outline-warning"%>
    <%= link_to "Back", friends_path, class: "btn btn-outline-secondary" %>

  </div>

</div>